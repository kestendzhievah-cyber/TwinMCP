# Configuration de l'API MCP
# Copiez ce fichier en .env.local et ajustez les valeurs

# Authentification
JWT_SECRET=your-secret-key-change-in-production-please

# Configuration Firebase Admin (côté serveur)
FIREBASE_ADMIN_TYPE=service_account
FIREBASE_ADMIN_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nVOTRE-CLE-PRIVEE-ICI\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=123456789012345678901
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_ADMIN_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_ADMIN_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_UNIVERSE_DOMAIN=googleapis.com

# Configuration Firebase (côté client)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-ABCDEFGHIJ

# Cache Redis (optionnel - utilise la mémoire si non configuré)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=1

# Database PostgreSQL
DATABASE_URL="postgresql://twinmcp_user:twinmcp_password@localhost:5432/twinmcp_dev"
DIRECT_DATABASE_URL="postgresql://twinmcp_user:twinmcp_password@localhost:5432/twinmcp_dev"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Rate Limiting (global)
DEFAULT_RATE_LIMIT=1000
RATE_LIMIT_WINDOW=3600000

# Cache (global)
DEFAULT_CACHE_TTL=3600
CACHE_STRATEGY=memory

# Queue (optionnel)
MAX_QUEUE_WORKERS=3
JOB_TIMEOUT=300000

# Monitoring (optionnel)
SENTRY_DSN=
ANALYTICS_ENABLED=true

# Storage Configuration
STORAGE_PROVIDER=minio

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=twinmcp-docs
S3_BUCKET_REGION=us-east-1

# MinIO Configuration (pour développement)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=twinmcp-docs
MINIO_USE_SSL=false

# Development
NODE_ENV=development

# Vector Store Configuration
VECTOR_STORE_PROVIDER=pinecone  # 'pinecone' or 'qdrant'

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=twinmcp-docs
PINECONE_ENVIRONMENT=us-west1-gcp

# Qdrant Configuration (alternative to Pinecone)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=twinmcp-docs

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=your-openai-api-key

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379

# Payment Providers Configuration

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # 'sandbox' or 'live'
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Wise (TransferWise) Configuration
WISE_API_KEY=your_wise_api_key
WISE_PROFILE_ID=your_wise_profile_id
WISE_MODE=sandbox  # 'sandbox' or 'live'

# Billing Configuration
INVOICE_TAX_RATE=0.20  # 20% TVA
INVOICE_DUE_DAYS=30  # Jours avant échéance
INVOICE_CURRENCY=EUR  # Devise par défaut

# SMTP Configuration (for invoice emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@twinmcp.com
INVOICE_EMAIL_FROM=billing@twinmcp.com
