# Configuration du cache npm
cache = true
prefer-offline = true
legacy-peer-deps = true
strict-peer-deps = false
package-lock = true
save-exact = true
engine-strict = false

# Désactiver les scripts postinstall inutiles
ignore-scripts = false

# Configuration du réseau
fetch-retries = 3
fetch-retry-mintimeout = 20000
fetch-retry-maxtimeout = 120000

# Configuration de la mémoire
node-options = --max-old-space-size=4096

# Configuration pour les dépendances
package-lock-only = false
prefer-dedupe = true

# Désactiver les mises à jour automatiques
update-notifier = false

# Configuration pour les logs
loglevel = warn

# Configuration pour les dépendances optionnelles
optional = true

# Configuration pour les dépendances de développement
production = false

# Configuration pour les dépendances globales
save-prefix = ""

# Désactiver les vérifications de sécurité
ignore-optional = false
ignore-platform = false
ignore-scripts = false

# Configuration pour les registres
registry = https://registry.npmjs.org/
@types:registry = https://registry.npmjs.org/
@babel:registry = https://registry.npmjs.org/
@next:registry = https://registry.npmjs.org/
@vercel:registry = https://registry.npmjs.org/
@firebase:registry = https://registry.npmjs.org/
@google-cloud:registry = https://registry.npmjs.org/
